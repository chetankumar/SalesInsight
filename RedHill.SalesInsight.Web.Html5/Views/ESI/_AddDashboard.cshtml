@model RedHill.SalesInsight.Web.Html5.Models.ESI.DashboardSettingsView
@using (Html.BeginForm("AddNewDashboard", "ESI", FormMethod.Post))
{
    <div class="modal fade" id="Add_Dashboard">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Create Dashboard</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-3">Name</label>
                            <div class="col-md-6">
                                <input type="hidden" name="DashboardId" value="0" />
                                <input type="text" class="form-control" name="Name" value="" required="required" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Type</label>
                            <div class="col-md-6">
                                <div class="radio">
                                    <label>
                                        <input type="radio" name="AccessType" checked value="Personal" /> Personal
                                    </label>
                                </div>
                                @{
                                    var accessRule = ViewBag.AccessRule;
                                    var canCreateStandard = false;

                                    if (accessRule != null && accessRule.HasDashboardAccess == SIRolePermissionLevelConstants.ADMIN)
                                    {
                                        canCreateStandard = true;
                                    }

                                    <text>
                                        <div class="radio">
                                            <label data-toggle="tooltip" title="@(canCreateStandard? "":"Dashboard Admin access is required to create STANDARD dashboard")" data-placement="bottom">
                                                <input type="radio" name="AccessType" value="Standard" @(canCreateStandard ? "" : "disabled") /> Standard
                                            </label>
                                        </div>
                                    </text>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
                                    }