@model object

@if (Model == "")
{
    if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }
    if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            @ViewBag.Message
        </div>
    }
    if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }
    if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">&times</button>
            @TempData["Success"]
        </div>
    }
    if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }
}
else
{
    if (ViewData[Model + "_Error"] != null)
    {
        <div class="alert alert-danger">
            @ViewData[Model + "_Error"]
        </div>
    }
    if (ViewData[Model + "_Message"] != null)
    {
        <div class="alert alert-success">
            @ViewData[Model + "_Message"]
        </div>
    }
    if (TempData[Model + "_Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData[Model + "_Error"]
        </div>
    }
    if (TempData[Model + "_Message"] != null)
    {
        <div class="alert alert-success">
            @TempData[Model + "_Message"]
        </div>
    }
}




