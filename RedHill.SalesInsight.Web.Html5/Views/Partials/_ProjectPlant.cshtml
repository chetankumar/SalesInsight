@model RedHill.SalesInsight.Web.Html5.Models.ProjectPlantView

@using (Html.BeginForm("UpdateProjectPlant","Home",FormMethod.Post,new {@class="form-horizontal"})){
    @Html.HiddenFor(m => m.ProjectId)
    @Html.HiddenFor(m => m.ProjectPlantId)
    <div class="form-group">
        <label class="control-label col-sm-1">Plant</label>
        <div class="col-sm-5">
            @Html.DropDownListFor(m=>m.PlantId,Model.AvailablePlants,new {@class="form-control"})
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-1">Volume</label>
        <div class="col-sm-5">
            @Html.TextBoxFor(m=>m.Volume,new {@class="form-control"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-5 col-sm-offset-1">
            <input type="submit" class="btn btn-primary" value="@(Model.ProjectPlantId > 0 ? "Update" : "Add")" />
        </div>
    </div>
}



