@model RedHill.SalesInsight.Web.Html5.Models.ProjectView
<table class="table table-striped table condensed table-bordered" id="forecast_table">
    <thead>
        <tr>
            <th>
                Plant
            </th>
            <th class="header_1 text-right" style="text-align:right">@DateTime.Today.AddMonths(0).ToString("MMM, yyyy")</th>
            <th class="header_2 text-right" style="text-align:right">@DateTime.Today.AddMonths(1).ToString("MMM, yyyy")</th>
            <th class="header_3 text-right" style="text-align:right">@DateTime.Today.AddMonths(2).ToString("MMM, yyyy")</th>
            <th class="header_4 text-right" style="text-align:right">@DateTime.Today.AddMonths(3).ToString("MMM, yyyy")</th>
            <th class="header_5 text-right" style="text-align:right">@DateTime.Today.AddMonths(4).ToString("MMM, yyyy")</th>
            <th class="header_6 text-right" style="text-align:right">@DateTime.Today.AddMonths(5).ToString("MMM, yyyy")</th>
        </tr>
    </thead>
    <tbody>
            @foreach(var plant in Model.ProjectPlants){
            <tr data-plant="@plant.PlantId">
                <td>@plant.PlantName</td>
                @for(int i=1;i<7;i++){
                <td class="plant_@(plant.PlantId)_@(DateTime.Today.AddMonths(i).ToString("MM-yyyy"))" data-plant="@plant.PlantId" data-date="@DateTime.Today.AddMonths(i).ToString("MM-yyyy")">
                    <input type="text" style="width:100%;text-align:right" data-plant="@plant.PlantId" class="form-control forecast_input input-sm"/>
                </td>
                }
            </tr>
            }
    </tbody>
</table>



