@model RedHill.SalesInsight.Web.Html5.Models.CompanyView

<table class="table table-bordered table-striped data_table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Active</th>
            @if (ViewBag.AccessRule.HasStructureAccess == SIRolePermissionLevelConstants.FULL_ACCESS)
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (RedHill.SalesInsight.Web.Html5.Models.RegionView c in Model.Regions)
        {
            <tr>
                <td>@c.Name</td>
                <td>
                    @{
            if (@c.Active)
            {
                <span class="glyphicon glyphicon-ok">
                    @if (@c.Active)
                    {<span style="display:none">1</span>}
                </span>
            }
            else
            {
                <span class="glyphicon glyphicon-remove"></span>
            }
                    }
                </td>
                @if (ViewBag.AccessRule.HasStructureAccess == SIRolePermissionLevelConstants.FULL_ACCESS)
                {
                    <td>
                        <a href="/Home/EditRegion/@c.RegionId" class="btn btn-primary btn-xs"><i class="glyphicon glyphicon-edit"></i></a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>