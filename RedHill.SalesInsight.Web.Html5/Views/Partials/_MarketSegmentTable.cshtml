@model RedHill.SalesInsight.Web.Html5.Models.CompanyView

<table class="table data_table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Active</th>
                <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (RedHill.SalesInsight.Web.Html5.Models.MarketSegmentView c in Model.MarketSegments)
        {
            <tr>
                <td>@c.Name</td>
                <td>
                    @{
            if (@c.Active)
            {
                <span class="glyphicon glyphicon-ok"><span style="display:none">1</span></span>
            }
            else
            {
                <span class="glyphicon glyphicon-remove"></span>
            }
                    }
                </td>
                    <td>
                        <a href="/Home/EditMarketSegment/@c.MarketSegmentId" class="btn btn-xs btn-primary" title="Edit Market Segment">
                            <i class="glyphicon glyphicon-edit"></i>
                        </a>
                    </td>
            </tr>
        }
    </tbody>
</table>
